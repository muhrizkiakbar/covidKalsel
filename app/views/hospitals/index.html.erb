


<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>Hospitals</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive py-3">
          <table class="table table-flush" >
            <thead class="thead-light">
              <tr>
                <th>City</th>
                <th>Name hospital</th>
                <th>Address</th>
                <th>Phone number</th>
                <th>Status</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @hospitals.each do |hospital| %>
                <tr>
                  <td><%= hospital.city.name %></td>
                  <td><%= hospital.name_hospital %></td>
                  <td><%= hospital.address %></td>
                  <td><%= hospital.phone_number %></td>
                  <td>
                      <% if (hospital.is_primary) %>
                        Primary
                      <% else %>
                        Secondary
                      <% end %>
                  </td>
                  <td>
                    <%= link_to hospital, class: "btn btn-icon btn-sm btn-info" do %>
                      <%= icon("fas","eye", class: "text-white")%>
                    <% end %>
                    <%= link_to edit_hospital_path(hospital), class: "btn btn-icon btn-sm btn-warning" do %>
                      <%= icon("fas", "edit", class: "text-white")%>
                    <% end %>
                    <%= link_to hospital, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                      <%= icon("fas", "trash", class: "text-white")%>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer">
        <%= paginate @hospitals %>
      </div> 

    </div>

    
    <br>
    <%# paginate @cities %>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Cov Hospital', new_hospital_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
      
<%= render partial: 'layouts/body' %>
