
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <% if notice!=nil %>
      <div class="alert alert-success" role="alert">
          <%= notice %>
      </div>
    <% end %>
    
    <% if hospital.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <span class="alert-icon"><h3 class="text-white"><%= icon("fas", "exclamation-triangle", class: "fa-3x text-white")%></h3></span>
          <span class="alert-text">
            <h3 class="text-white"><strong><%= pluralize(hospital.errors.count, "error") %></strong> prohibited this city from being saved:</h3>
            <ul>
              <% hospital.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </span>
          
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>
    <% end %>

    <div class="card">
      <div class="card-header">
        <h3><%= @header_card %></h3>
      </div>
      <div class="card-body">
        <%= form_with(model: hospital, local: true) do |form| %>


          <div class="form-group">
            <label class="form-control-label">City</label>
            <%= form.select(:city_id ,City.all.collect{|u| [u.name, u.slug]},{prompt: "Choose", disabled: true}, id: '', class:"form-control select2", 'data-toggle': "select", 'title': "Simple select", 'data-live-search': "true", 'data-live-search-placeholder': "Search ...", required: true) %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Name Hospital</label>
            <%= form.text_field :name_hospital, class: "form-control", placeholder: "Name Hospital" %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Phone Number</label>
            <%= form.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
          </div>


          <div class="form-group">
            <label class="form-control-label">Phone Number</label>
            <%= form.text_field :hotline, class: "form-control", placeholder: "Hotline" %>
          </div>
          
          <div class="form-group">
            <label class="form-control-label">Address</label>
            <%= form.text_area :address, class: "form-control", placeholder: "Address" %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Status Rumah Sakit</label>
            <%= form.check_box :is_primary %> Utama
          </div>


          <div class="actions">
            <%= form.submit 'Submit', :class => 'btn btn-primary' %>
            <%= link_to 'Back', hospitals_path, :class => 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
    


    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Hospital', new_hospital_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
      
<%= render partial: 'layouts/body' %>
