
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>Roles</h3>
      </div>
      <div class="table-responsive py-3">
        <table class="table table-flush" id="datatable-kota">
          <thead class="thead-light">
            <tr>
              <th>Role</th>
              <th colspan="4"></th>
            </tr>
          </thead>

          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td><%= role.name %></td>
                <td>
                  <%= link_to role_role_permissions_path(role), class: "btn btn-icon btn-sm btn-success" do %>
                    <%= icon("fas","cogs", class: "text-white")%>
                  <% end %>
                  <%= link_to role, class: "btn btn-icon btn-sm btn-info" do %>
                    <%= icon("fas","eye", class: "text-white")%>
                  <% end %>
                  <%= link_to edit_role_path(role), class: "btn btn-icon btn-sm btn-warning" do %>
                    <%= icon("fas", "edit", class: "text-white")%>
                  <% end %>
                  <%= link_to role, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                    <%= icon("fas", "trash", class: "text-white")%>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

    
    <br>
    <%# paginate @cities %>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Role', new_role_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
      
<%= render partial: 'layouts/body' %>
