


<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>Show Role</h3>
      </div>
      <div class="card-body">
        
      <p>
        <strong>Name:</strong>
        <%= @role.name %>
      </p>

      </div>
      <div class="card-footer">

        <%= link_to 'Edit', edit_role_path(@role), class: "btn btn-primary" %>

        <%= link_to 'Back', roles_path, class: "btn btn-secondary" %>

      </div>

    </div>

    
    <br>
    <%# paginate @cities %>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Role', new_role_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
      
<%= render partial: 'layouts/body' %>
