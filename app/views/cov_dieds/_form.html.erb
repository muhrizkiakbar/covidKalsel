

<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <% if notice!=nil %>
      <div class="alert alert-success" role="alert">
          <%= notice %>
      </div>
    <% end %>

    <% if cov_died.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <span class="alert-icon"><h3 class="text-white"><%= icon("fas","exclamation-triangle 3x", class: "text-white")%></h3></span>
          <span class="alert-text">
            <h3 class="text-white"><strong><%= pluralize(cov_died.errors.count, "error") %></strong> prohibited this city from being saved:</h3>
            <ul>
              <% cov_died.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </span>

          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>
    <% end %>

    <div class="card">
      <div class="card-header">
        <h3><%= @header_card %></h3>
      </div>
      <div class="card-body">
        <%= form_with(model: cov_died, local: true) do |form| %>


          <div class="form-group">
            <label class="form-control-label">City</label>
            <%= form.select(:city_id ,City.all.collect{|u| [u.name, u.slug]},{prompt: "Choose", disabled: true}, id: '', class:"form-control select2", 'data-toggle': "select", 'title': "Simple select", 'data-live-search': "true", 'data-live-search-placeholder': "Search ...", required: true) %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Amount</label>
            <%= form.number_field :amount, required: true,  class: "form-control", placeholder: "Amount", min: 1 %>
          </div>



          <div class="form-group">
            <label class="form-control-label">Date Time</label>
            <%= form.datetime_select :dateTime, class: "form-control" %>
          </div>

          <div class="actions">
            <%= form.submit 'Submit', :class => 'btn btn-primary' %>
            <%= link_to 'Back', cov_dieds_path, :class => 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>


<%= render partial: 'layouts/body' %>
