


<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>Information</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive py-3">
          <table class="table table-flush" >
            <thead class="thead-light">
              <tr>
                <th>User</th>
                <th>Tittle</th>
                <th>Content</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @informations.each do |information| %>
                <tr>
                  <td><%= information.user.username %></td>
                  <td><%= information.tittle %></td>
                  <td><%= information.content %></td>
                  <td>
                    <%= link_to information, class: "btn btn-icon btn-sm btn-info" do %>
                      <%= icon("fas","eye", class: "text-white")%>
                    <% end %>
                    <%= link_to edit_information_path(information), class: "btn btn-icon btn-sm btn-warning" do %>
                      <%= icon("fas", "edit", class: "text-white")%>
                    <% end %>
                    <%= link_to information, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                      <%= icon("fas", "trash", class: "text-white")%>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer">
        <%= paginate @informations %>
      </div> 
    </div>

    
    <br>
    <%# paginate @cities %>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Information', new_information_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
      
<%= render partial: 'layouts/body' %>
