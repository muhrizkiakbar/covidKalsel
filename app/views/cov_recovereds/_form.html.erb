<%= form_with(model: cov_recovered, local: true) do |form| %>
  <% if cov_recovered.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cov_recovered.errors.count, "error") %> prohibited this cov_recovered from being saved:</h2>

      <ul>
      <% cov_recovered.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.select(:city_id ,City.all.collect{|u| [u.name, u.slug]},{prompt: "City", disabled: true}, id: '', class:"form-control select2", 'data-toggle': "select", 'title': "Simple select", 'data-live-search': "true", 'data-live-search-placeholder': "Search ...", required: true) %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div class="field">
    <%= form.label :dateTime %>
    <%= form.datetime_select :dateTime %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <% if notice!=nil %>
      <div class="alert alert-success" role="alert">
          <%= notice %>
      </div>
    <% end %>
    
    <% if cov_recovered.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <span class="alert-icon"><h3 class="text-white"><%= fa_icon "exclamation-triangle 3x", class: "text-white"%></h3></span>
          <span class="alert-text">
            <h3 class="text-white"><strong><%= pluralize(cov_recovered.errors.count, "error") %></strong> prohibited this city from being saved:</h3>
            <ul>
              <% cov_recovered.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </span>
          
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>
    <% end %>

    <div class="card">
      <div class="card-header">
        <h3><%= @header_card %></h3>
      </div>
      <div class="card-body">
        <%= form_with(model: cov_recovered, local: true) do |form| %>


          <div class="form-group">
            <label class="form-control-label">City</label>
            <%= form.select(:city_id ,City.all.collect{|u| [u.name, u.slug]},{prompt: "Choose", disabled: true}, id: '', class:"form-control select2", 'data-toggle': "select", 'title': "Simple select", 'data-live-search': "true", 'data-live-search-placeholder': "Search ...", required: true) %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Amount</label>
            <%= form.number_field :amount, required: true,  class: "form-control", placeholder: "Amount", min: 1 %>
          </div>


          <div class="form-group">
            <label class="form-control-label">Date Time</label>
            <%= form.datetime_select :dateTime, class: "form-control" %>
          </div>

          <div class="actions">
            <%= form.submit 'Submit', :class => 'btn btn-primary' %>
            <%= link_to 'Back', cov_recovereds_path, :class => 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
    


    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

      
<%= render partial: 'layouts/body' %>
