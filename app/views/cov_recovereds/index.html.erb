
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>CoV Recovereds</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive py-3">
          <table class="table table-flush" >
            <thead class="thead-light">
              <tr>
                <th>City</th>
                <th>Amount</th>
                <th>Datetime</th>
                <th>Tool</th>
                <th>Created</th>
              </tr>
            </thead>

            <tbody>
              <% @cov_recovereds.each do |cov_recovered| %>
                <tr>
                  <td><%= cov_recovered.city.name %></td>
                  <td><%= cov_recovered.amount %></td>
                  <td><%= cov_recovered.added_at %></td>
                  <td>
                    <%= link_to cov_recovered, class: "btn btn-icon btn-sm btn-info" do %>
                      <%= icon("fas","eye", class: "text-white")%>
                    <% end %>
                    <%= link_to edit_cov_recovered_path(cov_recovered), class: "btn btn-icon btn-sm btn-warning" do %>
                      <%= icon("fas", "edit", class: "text-white")%>
                    <% end %>
                    <%= link_to cov_recovered, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                      <%= icon("fas", "trash", class: "text-white")%>
                    <% end %>
                  </td>
                  <td><%= cov_recovered.created_at %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer">
        <%= paginate @cov_recovereds %>
      </div>
    </div>


    <br>
    <%# paginate @cities %>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Cov Recovered', new_cov_recovered_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>

<% content_for :search do %>
  <%= search_form_for @q, class: "navbar-search navbar-search-dark form-inline mr-sm-3", id: "navbar-search-main" do |f| %>
    <div class="form-group mb-0">
      <div class="input-group input-group-alternative input-group-merge">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
        <%= f.search_field :city_name_or_added_at_cont, id: "search", class:"form-control", placeholder: "Search", autocomplete: "off" %>
      </div>
    </div>
    <button type="button" class="close" data-action="search-close" data-target="" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  <% end %>
<% end %>

<%= content_for :toggle_search do %>
  <li class="nav-item d-sm-none">
    <a class="nav-link" href="#" data-action="search-show" data-target="#navbar-search-main">
      <%= icon('fas', 'search-plus') %>
    </a>
  </li>
<% end %>

<%= render partial: 'layouts/body' %>
