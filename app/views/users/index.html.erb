
<%# link_to "Log out", destroy_user_session_path, method: "delete" %>






<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>Users</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive py-3">
          <table class="table table-flush" >
            <thead class="thead-light">
              <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Name</th>
                <th>Role</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= user.username %></td>
                  <td><%= user.name %></td>
                  <td><%= user.role.name %></td>
                  <td>
                    <%= link_to user, class: "btn btn-icon btn-sm btn-info" do %>
                      <%= icon("fas","eye", class: "text-white")%>
                    <% end %>
                    <%= link_to edit_user_path(user), class: "btn btn-icon btn-sm btn-warning" do %>
                      <%= icon("fas", "edit", class: "text-white")%>
                    <% end %>
                    <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                      <%= icon("fas", "trash", class: "text-white")%>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer">
        <%= paginate @users %>
      </div> 
    </div>

    
    <br>
    <%# paginate @cities %>



    <%= render partial: 'layouts/footer_back' %>
  </div>
<% end %>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New User', new_user_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
      
<%= render partial: 'layouts/body' %>
