<% content_for :isi do %>
<div class="container-fluid mt--6">
<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h3>Gambar</h3>
  </div>
  <div class="table-responsive py-3">
    <table class="table table-flush" id="datatable-kota">
      <thead class="thead-light">
        <tr>
          <th>Gambar</th>
          <th colspan="3" class="text-right">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @info_practices.each_with_index do |info_practice, index| %>
          <tr>
            <td>
              <%= link_to info_practice.image_content.url(:original), class:"avatar", "data-lightbox": "image-#{index}" do %>
                <%= image_tag info_practice.image_content.url(:thumb) %>
              <% end %>
            </td>
            <td class="text-right">
              <%= link_to info_practice, class: "btn btn-icon btn-sm btn-info" do %>
                <%= icon("fas","eye", class: "text-white")%>
              <% end %>
              <%= link_to edit_info_practice_path(info_practice), class: "btn btn-icon btn-sm btn-warning" do %>
                <%= icon("fas", "edit", class: "text-white")%>
              <% end %>
              <%= link_to info_practice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                <%= icon("fas","trash", class: "text-white")%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Info Practice', new_info_practice_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
</div>
<% end %>
<%= render partial: 'layouts/body' %>
