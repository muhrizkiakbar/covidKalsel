
<% content_for :isi do %>
<div class="container-fluid mt--6">
<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h3>Gambar</h3>
  </div>
  <div class="table-responsive">
    <table class="table table-flush">
      <thead class="thead-light">
        <tr>
          <th>Surat</th>
          <th colspan="3" class="text-right">Action</th>
        </tr>
      </thead>

      <tbody class="autopagerize_page_element">
        <% @letters.each do |letter| %>
          <tr>
            <td>
              <%= link_to letter.letter.url(:original), class:"avatar", "data-lightbox": "image-#{info_practice.id}" do %>
                <%= image_tag letter.letter.url(:thumb) %>
              <% end %>
            </td>
            <td class="text-right">
              <%= link_to letter, class: "btn btn-icon btn-sm btn-info" do %>
                <%= icon("fas","eye", class: "text-white")%>
              <% end %>
              <%= link_to edit_letter_path(letter), class: "btn btn-icon btn-sm btn-warning" do %>
                <%= icon("fas", "edit", class: "text-white")%>
              <% end %>
              <%= link_to letter, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                <%= icon("fas","trash", class: "text-white")%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= paginate @info_practices %>
  </div>
</div>

<% content_for :button_header do %>
  <div class="col-lg-6 col-5 text-right">
    <%= link_to 'New Letter', new_letter_path, class: "btn btn-sm btn-neutral" %>
  </div>
<% end %>
</div>
<% end %>
<%= render partial: 'layouts/body' %>
