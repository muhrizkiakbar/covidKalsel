<% content_for :isi do %>
<div class="container-fluid mt--6">

    <div class="row">
      
        <div class="col-md-12">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Covid Graph</h2>
                    </div>
                    <div class="card-body">
                        <%= line_chart [
                            {name: "Dirawat/Positif", data: CovPositive.group_by_day('dateTime').sum(:amount).map{|t| [t[0], t[1]] }},
                            {name: "Sembuh", data: CovRecovered.group_by_day('dateTime').sum(:amount).map{|t| [t[0], t[1]] }},
                            {name: "Meninggal", data: CovDied.group_by_day('dateTime').sum(:amount).map{|t| [t[0], t[1]] }},
                            {name: "ODP", data: CovOdp.group_by_day('dateTime').sum(:amount).map{|t| [t[0], t[1]] }},
                            {name: "PDP", data: CovPdp.group_by_day('dateTime').sum(:amount).map{|t| [t[0], t[1]] }},
                            ] %>
                        <%# <%= line_chart CovPositive.group_by_day('dateTime').count %> 
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Visitors</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-flush">
                        <thead class="thead-light">
                            <tr>
                            <th>No</th>
                            <th>IP</th>
                            <th>Browser</th>
                            <th>OS</th>
                            <th>Device Type</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Started At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @visitors.each_with_index do |visitor,index|%>
                            <tr>
                            <td><%= index+1 %></td>
                            <td><%= visitor.ip %></td>
                            <td><%= visitor.browser %></td>
                            <td><%= visitor.os %></td>
                            <td><%= visitor.device_type %></td>
                            <td><%= visitor.country %></td>
                            <td><%= visitor.city %></td>
                            <td><%= visitor.started_at %></td>
                            </tr>
                            <% end %>
                        </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <%= paginate @visitors %>
                </div>
            </div>
        </div>
        
      </div>
      <div class="col-md-6">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Visitor Graph</h2>
                </div>
                <div class="card-body">
                    <%= line_chart Ahoy::Visit.group_by_day(:started_at).count %>
                </div>
            </div>
        </div>
        
      </div>
    </div>
</div>
<% end %>



<%= render partial: 'layouts/body' %>
